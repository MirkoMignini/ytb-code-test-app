<p id="notice"><%= notice %></p>

<h1>Listing Books for user: <%= @user.name %></h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= link_to 'Show', user_book_path(@user, book) %></td>
        <td><%= link_to 'Edit', edit_user_book_path(@user, book) %></td>
        <td><%= link_to 'Destroy', user_book_path(@user, book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_user_book_path %> |
<%= link_to 'Back to users', users_path %>
